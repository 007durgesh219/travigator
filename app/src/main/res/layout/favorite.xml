<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:textSize="19sp"
	android:text="@string/chooseFav" />

    <TextView 
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:textSize="17sp"
	android:text="@string/selectCity" />

    <Spinner
	android:id="@+id/cityFav"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:spinnerMode="dropdown" />

    <TextView
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:textSize="17sp"
	android:text="@string/selectRoute" />

    <Spinner
	android:id="@+id/routeFav"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:spinnerMode="dropdown" />

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="17sp"
		android:text="@string/selectStop"/>
    <Spinner
	android:id="@+id/stopFav"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:spinnerMode="dropdown" />

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"/>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="10dp" 
	    android:layout_gravity="center_horizontal">

	    <Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/button_navigate"
		android:id="@+id/buttonNavigate" />

	    <Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/button_view"
		android:id="@+id/buttonViewRoute" />

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/button_remFav"
			android:id="@+id/buttonRemFav" />

	</LinearLayout>

</LinearLayout>