<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/idLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:textSize="19sp"
	android:text="@string/chooseNet"
	android:layout_marginTop="10sp"	/>

    <TextView
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:textSize="35px"
	android:text="@string/selectCity" />

    <Spinner
	android:id="@+id/citySpinner"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:spinnerMode="dropdown" />

    <TextView
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:textSize="35px"
	android:text="@string/selectRoute" />

    <Spinner
	android:id="@+id/routeNoSpinner"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:spinnerMode="dropdown" />

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="35px"
		android:text="@string/selectSrcStop"/>

    <Spinner
        android:id="@+id/srcStopSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"></Spinner>

    <TextView
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:textSize="35px"
	android:text="@string/selectStop" />

    <Spinner
	android:id="@+id/stopSpinner"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:spinnerMode="dropdown" />

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"/>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="10dp" 
	    android:layout_gravity="center_horizontal">

	    <Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/button_navigate"
		android:id="@+id/searchNavigate" />

	    <Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/button_view"
		android:id="@+id/searchViewRoute" />

	    <Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/button_refresh"
		android:id="@+id/searchRefresh" />
	
	</LinearLayout>

</LinearLayout>

